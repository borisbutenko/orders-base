.menu-main
  &__list
    position: relative
    top: -6px
    &-dropdown
      display: none
      opacity: 0
      width: 100%
      position: absolute
      top: 7rem
      left: 0
      background-color: #0078a6
      z-index: 9999
      //transition: opacity .3s
      &:hover
        display: block
        opacity: 1
  &__item
    position: relative
    display: inline-block
    &-dropdown
      width: 100%
  &__link
    padding: 0 1.5rem
    display: inline-block
    font-size: 1.3rem
    text-transform: uppercase
    font-weight: 600
    color: #fff
    line-height: 6.3rem
    border-top: 4px solid transparent
    border-bottom: 4px solid transparent
    //transition: all .1s
    &-dropdown
      width: 100%
      text-align: center
    &:hover,
    &:focus
      border-bottom-color: #fff
      color: #fff
      text-decoration: none
      & + .menu-main__list-dropdown
        display: block
        opacity: 1