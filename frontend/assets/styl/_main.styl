*,
*::before,
*::after
  box-sizing: border-box

html
  font-size: 62.5%

body
  font-size: 1.4rem
  font-weight: 400
  overflow-x: hidden

ul,
nav
  list-style: none
  padding: 0
  margin: 0

h1,
h2,
h3,
h4,
h5,
h6
  padding: 0
  margin: 0
  font-weight: 600

main.main
  margin-top: 3rem

li.picker-switch
  display: none

td.today
  background-color: #555 !important

p
  padding: 0
  margin: 0

.text
  &-center
    text-align: center
  &-right
    text-align: right

a
  color: #0078a6
  opacity: 1
  &:hover,
  &:active,
  &:focus
    opacity: .9
    text-decoration: none
    outline: none

.shadow
  box-shadow: 0 0 25px 5px #eee
  &-inset
    box-shadow: inset 0 0 25px 5px #eee
    //transition: all .3s
    &:hover
      box-shadow: 0 0 25px 5px #eee

.noUi-tooltip
  background-color: #0078a6
  color: #fff
  border-radius: 20rem
  padding: 0 1rem
  font-size: 1.2rem
  margin-bottom: .5rem
  //transition: all .3s

.noUi-handle-lower > .noUi-tooltip::before
  content: 'от'
  color: #000
  font-weight: 600
  position: absolute
  top: 0
  left: -2rem

.noUi-handle-upper > .noUi-tooltip::before
  content: 'до'
  color: #000
  font-weight: 600
  position: absolute
  top: 0
  left: -2rem

.noUi-horizontal
  width: 80%
  margin-left: 10%
  margin-top: 2.5rem
  &[disabled] .noUi-tooltip
    background-color: #ababab

.button
  display: inline-block
  padding: 1rem 2rem
  text-align: center
  border-radius: 2rem
  font-weight: 400
  &-blue
    color: #fff
    background-color: #0078a6
    &:hover,
    &:active,
    &:focus
      color: #fff
  &-orange
    font-weight: 600
    color: #fff
    background-color: #e8641b
    &:hover,
    &:active,
    &:focus
      color: #fff

.label
  display: inline-block
  width: 100%
  text-align: left
  font-size: 1.2rem
  color: #000
  &-pull
    padding: 0

.daterangepicker
  font-size: 1.4rem

.applyBtn,
.cancelBtn
  width: 100%
  display: block
  margin-bottom: 1rem
  font-size: 1.4rem

.icon-daterange
  font-size: 1.6rem
  position: absolute
  cursor: pointer
  top: .5rem
  right: -2rem

.pager
  margin: 0
  margin-bottom: 3rem
  & > li
    &:first-child
      margin-right: -1rem
    &:last-child
      margin-left: -1rem
    & > a
      font-weight: 600
      color: #000
      border: none
    &.active > a
      color: #fff
      background: #0078a6

.ranges
  display: none !important

.tablist
  margin-bottom: 1.5rem
  &__item
    display: inline-block
    padding-bottom: .5rem
    margin-right: 1rem
    border-bottom: .2rem solid transparent
    &:last-child
      margin-right: 0
    &.active
      border-color: #000
      & > a
        opacity: 1
  &__link
    font-weight: 600
    opacity: .5
    color: #000
    &:hover,
    &:active
    &:focus
      color: #000

.logo
  display: block
  &:hover
    color: #0078a6
  &__image
    padding: .5rem 0
    float: left
  &__title
    text-transform: uppercase
    min-width: 30rem
    font-size: 1.5rem
    font-weight: 600
    margin-top: 2.4rem
    padding-left: 12rem
    &::first-line
      font-size: 1.2rem
      font-weight: normal

.icon-menu
  &__item
    float: left
    margin-right: 1.4rem
    &:last-child
      margin-right: 0
  &__link
    font-size: 1.6rem
    color: #000
    opacity: .5
    //transition: all .3s
    & > span
      display: inline-block
      margin: 0 2rem 0 1rem
    &:hover,
    &:focus
      opacity: 1
      color: #000
    &.active
      opacity: 1
      color: #f6c900

.input
  &::-webkit-input-placeholder
    font-family: "Open Sans", sans-serif
  &::-moz-placeholder
    font-family: "Open Sans", sans-serif
  &:-moz-placeholder
    font-family: "Open Sans", sans-serif
  &:-ms-input-placeholder
    font-family: "Open Sans", sans-serif
  font-family: "Open Sans", sans-serif
  width: 100%
  height: 3rem
  padding-left: 1.5rem
  border-radius: 2rem
  border: .2rem solid #0078a6
  color: #555
  font-weight: 400
  //transition: all .3s
  &:hover,
  &:focus
    background: #0078a6
    color: #fff
    outline: none
  &-mini
    display: none !important
    & + i.fa
      display: none !important
  &-radio
    display: none
    & + .label
      width: auto
      & > .span-radio
        width: 1rem
        height: 1rem
        border-radius: 50%
        border: .1rem solid #0078a6
        background: #fff
        float: left
        position: relative
        top: .05rem
        margin-right: .5rem
    &:checked + .label
      & .span-radio__checked
        display: block
        width: .6rem
        height: .6rem
        top: .1rem
        left: .1rem
        position: absolute
        border-radius: 50%
        background: #0078a6
  &-search
    position: relative
    height: 3.5rem
    & + i.fa
      position: absolute
      top: 1rem
      right: 5rem
      color: #0078a6
    &:hover,
    &:focus
      & + i.fa
        color: #fff
      &::-webkit-input-placeholder
        color: #fff
      &::-moz-placeholder
        color: #fff
      &:-moz-placeholder
        color: #fff
      &:-ms-input-placeholder
        color: #fff

.select
  & + .select2
    width: 100% !important
    & ~ .select2
      margin-top: 1rem
    & .select2-selection
      height: 3.5rem
      border-radius: 2rem
      border-color: #0078a6
      border-width: .2rem
      //transition: all .3s
      & .select2-selection__arrow b
        margin-top: 0 !important
      &:hover
        background: #0078a6
        & .select2-selection__rendered
          color: #fff !important
        & .select2-selection__arrow b
          border-color: #fff transparent transparent !important
      & .select2-selection__rendered
        color: #0078a6
        line-height: 3rem
      &:focus
        outline: none

.select2-container,
.daterangepicker
  z-index: 9999 !important

.select2-container--open
  & .select2-selection
    background-color: #0078a6
    &:hover
      & .select2-selection__rendered
        color: #fff !important
      & .select2-selection__arrow b
        border-color: transparent transparent #fff !important
  & .select2-selection__rendered
    color: #fff !important

.aside
  margin-bottom: 3rem
  padding: 3rem 0
  padding-left: .5rem
  &__title
    font-size: 1.6rem
  &__row
    position: relative
    margin-bottom: 3rem
    padding: 0 3.5rem
  &__datetimepicker
    position: relative

.section
  margin-bottom: 3rem
  padding: 3rem 0
  &-banner
    padding: 0 1.5rem